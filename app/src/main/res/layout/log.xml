<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/icon"
        android:src="@drawable/log1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Activity at home"
        android:id="@+id/activityType"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Living room"
        android:id="@+id/activityPlace"
        android:gravity="center_horizontal"
        android:layout_below="@+id/activityType"
        android:layout_alignLeft="@+id/activityType"
        android:layout_alignStart="@+id/activityType"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Logged at: 2015-09-03 17:15:22"
        android:id="@+id/activityTime"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/imageView2"
        android:src="@android:drawable/ic_menu_recent_history"
        android:layout_below="@+id/activityPlace"
        android:layout_alignLeft="@+id/activityPlace"
        android:layout_alignStart="@+id/activityPlace"
        android:layout_marginRight="2dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/icon"
        android:layout_alignRight="@+id/activityPlace"
        android:layout_alignEnd="@+id/activityPlace" />

</RelativeLayout>